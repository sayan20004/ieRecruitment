<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ieRecruitment</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Inter', system-ui, sans-serif;
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background:
                radial-gradient(1200px 800px at 20% -10%, rgba(13,110,253,.06), transparent),
                radial-gradient(1000px 700px at 120% 120%, rgba(13,110,253,.06), transparent),
                linear-gradient(180deg, #f8fafc, #eef2ff);
        }

        .auth-card {
            width: min(440px, 92vw);
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,.08);
            padding: 36px 32px;
        }

        .auth-card h2 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 4px;
        }

        .auth-card .subtitle {
            color: #6b7280;
            font-size: 0.875rem;
            margin-bottom: 24px;
        }

        .auth-input-group {
            position: relative;
            margin-bottom: 20px;
        }

        .auth-input-group .input-icon {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #6b7280;
            font-size: 1rem;
            pointer-events: none;
            z-index: 2;
        }

        .auth-input-group .form-control {
            padding: 12px 44px 12px 42px;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            background: #f9fafb;
            font-size: 0.9rem;
            transition: all 0.2s ease;
        }

        .auth-input-group .form-control:focus {
            border-color: #0d6efd;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(13,110,253,.12);
        }

        .auth-input-group .toggle-password {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            cursor: pointer;
            font-size: 1rem;
            z-index: 2;
        }

        .auth-input-group .error-message {
            display: block;
            font-size: 0.8rem;
            color: #dc3545;
            margin-top: 4px;
            text-align: right;
        }

        .auth-btn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            color: #fff;
            background: linear-gradient(135deg, #0d6efd, #0b5ed7);
            box-shadow: 0 6px 20px rgba(13,110,253,.25);
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .auth-btn:hover {
            box-shadow: 0 8px 28px rgba(13,110,253,.3);
            filter: brightness(1.03);
        }

        .auth-footer {
            text-align: center;
            margin-top: 16px;
            font-size: 0.9rem;
            color: #6b7280;
        }

        .auth-footer a {
            color: #0d6efd;
            font-weight: 600;
            text-decoration: none;
        }

        .auth-footer a:hover {
            text-decoration: underline;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
