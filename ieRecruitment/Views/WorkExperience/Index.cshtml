@section PageScripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        (() => {
            'use strict';

            let internships = [];
            const $ = (sel, root = document) => root.querySelector(sel);
            const $$ = (sel, root = document) => Array.from(root.querySelectorAll(sel));
            const hasFlatpickr = typeof window.flatpickr === "function";

            // Connect footer buttons to form FIRST
            setTimeout(() => {
                const btnNext = document.getElementById('btnNext');
                const btnSave = document.getElementById('btnSave');
                const form = document.getElementById('workExperienceForm');

                if (btnNext && form) {
                    btnNext.addEventListener('click', (e) => {
                        e.preventDefault();
                        form.submit();
                    });
                }

                if (btnSave && form) {
                    btnSave.addEventListener('click', (e) => {
                        e.preventDefault();
                        const formData = new FormData(form);
                        fetch(form.action, {
                            method: 'POST',
                            body: formData
                        }).then(() => {
                            alert('Work experience saved successfully!');
                        }).catch(err => {
                            console.error('Save failed:', err);
                        });
                    });
                }
            }, 100);

            /* ---------- Panel Switching ---------- */
            $$('input[name="ExperienceType"]').forEach(radio => {
                radio.addEventListener('change', (e) => {
                    const val = e.target.value;
                    const panelFresher = $('#panel-fresher');
                    const panelExp = $('#panel-exp');
                    const panelExpSales = $('#panel-exp-sales');

                    if (panelFresher) panelFresher.classList.toggle('d-none', val !== 'Fresher');
                    if (panelExp) panelExp.classList.toggle('d-none', val !== 'Experienced');
                    if (panelExpSales) panelExpSales.classList.toggle('d-none', val !== 'Experienced (Sales)');
                });
            });

            // Initialize panel visibility on page load
